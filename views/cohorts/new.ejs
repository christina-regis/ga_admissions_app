<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head.ejs %>
  <title>New Cohort</title>
  <link rel="stylesheet" type="text/css" href="/cohorts/styles/edit.css">
</head>
<body>
  <% if(user.role === 'admissions'){ %>
    <h1>New Cohort</h1>

    <form method="post" action="/cohorts/" class="form-horizontal">
      <div class="form-group">
        <label for="program" class="col-sm-2 control-label">Program:</label>
        <div class="col-sm-9">
          <input type="text" name="program" class="form-control" id="program">
        </div>
      </div>

      <div class="form-group">
        <label for="city" class="col-sm-2 control-label">City:</label>
        <div class="col-sm-9">
          <input type="text" name="city" class="form-control" id="city">
        </div>
      </div>

      <div class="form-group">
        <label for="campus" class="col-sm-2 control-label">Campus:</label>
        <div class="col-sm-9">
          <input type="text" name="campus" class="form-control" id="campus">
        </div>
      </div>

      <div class="form-group">
        <label for="start" class="col-sm-2 control-label">Start date:</label>
        <div class="col-sm-9">
          <input type="text" name="start" class="form-control" id="start">
        </div>
      </div>

      <div class="form-group">
        <label for="end" class="col-sm-2 control-label">End date:</label>
        <div class="col-sm-9">
          <input type="text" name="end" class="form-control" id="end">
        </div>
      </div>

      <button id="new-cohort"  class="btn btn-success active">Create cohort!</button>
    </form>

    <a href="/cohorts/">Back to index</a>
  <% } else { %>
    <h1>Access Denied</h1>
    <p>You don't have permission to view this page.</p>
  <% } %>

</body>
</html>
