<!DOCTYPE html>
<html>
<head>
  <% include ../partial/head.ejs %>
  <title>Cohort Edit Page</title>
</head>
<body>
  <% if(user.role === 'admissions'){ %>
    <h1>Edit <%= section.name() %></h1>

    <form method="post" action="/cohorts/<%= section._id %>?_method=PUT">
      <div class="form-group">
        <label>Program:</label>
        <input type="text" name="program" value="<%= section.program %>">
      </div>

      <div class="form-group">
        <label>City:</label>
        <input type="text" name="city" value="<%= section.city %>">
      </div>

      <div class="form-group">
        <label>Campus:</label>
        <input type="text" name="campus" value="<%= section.campus %>">
      </div>

      <div class="form-group">
        <label>Number:</label>
        <input type="number" name="number" value="<%= section.number %>">
      </div>

      <div class="form-group">
        <label>Start date:</label>
        <input type="text" name="start" value="<%= section.startDate() %>">
      </div>

      <div class="form-group">
        <label>End date:</label>
        <input type="text" name="end" value="<%= section.endDate() %>">
      </div>

      <button id="edit-cohort">Submit</button>
    </form>
  <% } else { %>
    <h1>Access Denied</h1>
    <p>You don't have permission to view this page.</p>
  <% } %>

</body>
</html>
